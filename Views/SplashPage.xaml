<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DirectSalesApp.Views.SplashPage"
             BackgroundColor="#2196F3">

    <ContentPage.Content>
        <StackLayout VerticalOptions="Center" HorizontalOptions="Center">
            <Label Text="Direct Sales App" 
                   TextColor="White" 
                   FontSize="36" 
                   FontAttributes="Bold"
                   HorizontalOptions="Center" />
                   
            <Label Text="Your Inventory Management Solution" 
                   TextColor="White" 
                   FontSize="18" 
                   HorizontalOptions="Center"
                   Margin="0,10,0,30" />
                   
            <ActivityIndicator IsRunning="True" 
                               Color="White" 
                               HeightRequest="50" 
                               WidthRequest="50" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage> 